<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GameTitle"/>
        <TextView
            android:id="@+id/gameDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GameDate" />
        <TextView
            android:id="@+id/gameTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GameTime"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gameListTeam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team1Name"/>
        <TextView
            android:id="@+id/gameListTeam1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team1Score"/>
        <TextView
            android:id="@+id/gameListTeam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team2Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameListTeam2Score"
            android:text="Team2Score"/>
    </LinearLayout>
</LinearLayout>